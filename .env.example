# IT Diligence Analysis Agent Configuration
# Copy this file to .env and fill in your API key

# Required: Anthropic API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Flask Secret Key (generate with: openssl rand -hex 32)
FLASK_SECRET_KEY=change-this-to-a-random-secret-key

# =============================================================================
# DATABASE (Phase 1)
# =============================================================================

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://diligence:localdev@localhost:5432/diligence

# Enable PostgreSQL (set to true when ready)
USE_DATABASE=false

# =============================================================================
# REDIS & CELERY (Phase 2)
# =============================================================================

# Redis URL for sessions and task queue
REDIS_URL=redis://localhost:6379/0

# Enable Redis sessions
USE_REDIS_SESSIONS=false

# Enable Celery for background tasks
USE_CELERY=false

# =============================================================================
# CLOUD STORAGE (Phase 5)
# =============================================================================

# Storage type: 'local' or 's3'
STORAGE_TYPE=local

# S3-compatible storage settings (for production)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=diligence-documents
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
